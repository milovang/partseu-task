{% extends 'base.html.twig' %}

{% block body %}
    <div class="main-content py-5 bg-light">
        <div class="container">
            <div class="row">
                {% if catalogs %}
                    {% for catalog in catalogs %}
                        <div class="col-md-4">
                            <div class="card mb-4 box-shadow">
                                <img class="card-img-top" src="{{ asset('images/' ~ catalog.getImage()) }}" alt="Card image cap">
                                <div class="card-body">
                                    <h5 class="card-title">{{ catalog.name }}</h5>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">{{ catalog.date|date('Y-m-d') }}</small>
                                    </div>
                                </div>
                                <div class="card-body">
                                    {% for category in catalog.getCategories() %}
                                        <a href="{{ path('byCategory', { 'id': category.getId() }) }}" class="card-link link-{{ category.getName() }}">{{ category.getName() }}</a>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <div class="col-12">
                        <h2><i class="fas fa-info-circle"></i> Sorry, there is no catalogs in searched categories.</h2>
                        <p class="mt-5">Please <a href="{{ path('homepage') }}">click here</a> to back on homepage</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
    </style>
{% endblock %}
